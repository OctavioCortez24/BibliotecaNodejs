<html>
    <head>
        <%- include('../template/headerPlantilla') %>
    </head>
    <body>
        <%- include('../template/barraNavegacion') %>

        <div class="container" align="Center">
            <h1 class="display-5" align="Center">Pedir un Libro</h1>
            <form action="https://biblioteca-tp6.herokuapp.com/Pedir-un-libro-Post" method="post">
    
                <div class="mb-3">
                    <p>
                        <select class='form-select' aria-label='Default select example' name='socio' required>
                            <option selected value=''>Seleccionar un socio</option>
                            <%- socios %>
                        </select>
                    </p>
                </div>
                <div class="mb-3">
                    <p>
                        <select class='form-select' aria-label='Default select example' name='libro' required>
                            <option selected value=''>Seleccionar un Libro</option>
                            <%- libros %>
                        </select>
                    </p>
                </div>
        
                <input type="submit" class="btn btn-outline-secondary" value="Enviar">
            </form>
        </div>
    </body>
</html>